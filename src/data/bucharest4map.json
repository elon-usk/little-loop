{
  "version": 8,
  "name": "Positron (MapLibre Ready + Curated POIs)",
  "metadata": {
    "copyright": "Â© OpenStreetMap contributors | MapTiler | OpenMapTiles",
    "maputnik:renderer": "mlgljs"
  },
  "center": [26.1, 44.43],
  "zoom": 12,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "pmtiles:///tiles/europe_romania.pmtiles"
    }
  },
  "sprite": "https://openmaptiles.github.io/positron-gl-style/sprite",
  "glyphs": "https://api.maptiler.com/fonts/{fontstack}/{range}.pbf?key=xwK5OblkSp4XIE9pfl4l",
  "layers": [

    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": { "fill-color": "rgb(230,233,229)" }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "filter": ["all", ["==", "$type", "Polygon"], ["!=", "brunnel", "tunnel"]],
      "paint": {
        "fill-antialias": true,
        "fill-color": "rgb(194,200,202)"
      }
    },
    {
      "id": "landcover_wood",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "wood"],
      "paint": {
        "fill-color": "rgb(220,224,220)",
        "fill-opacity": { "base": 1, "stops": [[8, 0], [12, 1]] }
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "rgb(234,234,230)",
        "fill-opacity": { "base": 0.6, "stops": [[8, 0.8], [9, 0.6]] }
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 12,
      "paint": {
        "fill-antialias": true,
        "fill-color": "rgb(234,234,229)",
        "fill-outline-color": "rgb(219,219,218)"
      }
    },
    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "minor", "service", "track"],
      "paint": {
        "line-color": "hsl(0,0%,88%)",
        "line-opacity": 0.9,
        "line-width": { "base": 1.55, "stops": [[13, 1.8], [20, 20]] }
      }
    },
    {
      "id": "road_major_inner",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary", "tertiary", "trunk"],
      "paint": {
        "line-color": "#fff",
        "line-width": { "base": 1.3, "stops": [[10, 2], [20, 20]] }
      }
    },
    {
      "id": "railway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#dddddd",
        "line-width": { "base": 1.3, "stops": [[16, 3], [20, 7]] }
      }
    },
    {
      "id": "boundary_state",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", "admin_level", 4],
      "paint": {
        "line-color": "rgb(230,204,207)",
        "line-dasharray": [2, 2],
        "line-width": { "base": 1.3, "stops": [[3, 1], [22, 15]] }
      }
    },

    {
      "id": "label_place_other",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "minzoom": 8,
      "maxzoom": 16,
      "filter": [
        "all",
        ["==", "$type", "Point"],
        ["in", "class", "neighbourhood", "hamlet", "isolated_dwelling"]
      ],
      "layout": {
        "text-font": ["Noto Sans Regular"],
        "text-size": { "stops": [[6, 9], [14, 13]] },
        "text-field": "{name}",
        "text-anchor": "center",
        "visibility": "visible"
      },
      "paint": {
        "text-color": "rgb(120,130,135)",
        "text-halo-color": "rgb(242,243,240)",
        "text-halo-width": 1
      }
    },

    {
      "id": "poi_family_education",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "poi",
      "minzoom": 13,
      "filter": [
        "in",
        "class",
        "school",
        "kindergarten",
        "college",
        "library",
        "museum",
        "playground",
        "park",
        "zoo",
        "swimming_pool"
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 11,
        "icon-image": "school-11",
        "icon-size": 0.8,
        "icon-anchor": "bottom",
        "text-anchor": "top",
        "text-offset": [0, 0.6],
        "visibility": "visible"
      },
      "paint": {
        "text-color": "#5A6A5A",
        "text-halo-color": "rgb(242,243,240)",
        "text-halo-width": 1,
        "icon-opacity": 0.9
      }
    },

    {
      "id": "poi_culture_faith",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "poi",
      "minzoom": 13,
      "filter": [
        "in",
        "class",
        "church",
        "theatre",
        "cinema",
        "art_gallery",
        "monument",
        "temple"
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 11,
        "icon-image": "religious-christian-11",
        "icon-size": 0.8,
        "icon-anchor": "bottom",
        "text-anchor": "top",
        "text-offset": [0, 0.6],
        "visibility": "visible"
      },
      "paint": {
        "text-color": "#5F5B70",
        "text-halo-color": "rgb(242,243,240)",
        "text-halo-width": 1,
        "icon-opacity": 0.9
      }
    },

    {
      "id": "poi_transport",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "poi",
      "minzoom": 12,
      "filter": [
        "in",
        "class",
        "bus_station",
        "ferry_terminal",
        "airport",
        "train_station",
        "parking"
      ],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 11,
        "icon-image": "bus-11",
        "icon-size": 0.8,
        "icon-anchor": "bottom",
        "text-anchor": "top",
        "text-offset": [0, 0.6],
        "visibility": "visible"
      },
      "paint": {
        "text-color": "#505A6B",
        "text-halo-color": "rgb(242,243,240)",
        "text-halo-width": 1,
        "icon-opacity": 0.9
      }
    },

    {
      "id": "place_town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "town"],
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 10,
        "text-transform": "uppercase"
      },
      "paint": {
        "text-color": "rgb(117,129,145)",
        "text-halo-color": "rgb(242,243,240)",
        "text-halo-width": 1
      }
    },
    {
      "id": "place_city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 12,
        "text-transform": "uppercase"
      },
      "paint": {
        "text-color": "rgb(117,129,145)",
        "text-halo-color": "rgb(242,243,240)",
        "text-halo-width": 1
      }
    }
  ],
  "id": "positron-maplibre-curated"
}
